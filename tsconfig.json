{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"rootDir": "src",
		"outDir": "dist/ESM",
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
